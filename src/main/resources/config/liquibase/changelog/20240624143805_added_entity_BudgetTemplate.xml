            <column name="monthly_hours" type="numeric"/>
            <column name="planned_hours" type="numeric"/>
            <column name="resource_count" type="numeric"/>
            <column name="income" type="numeric"/>
            <column name="other_taxes" type="numeric"/>
            <column name="description_other_taxes" type="string"/>
            <column name="withholding_taxes" type="numeric"/>
            <column name="mod_and_cif_costs" type="numeric"/>
            <column name="gross_profit" type="numeric"/>
            <column name="gross_profit_percentage" type="numeric"/>
            <column name="gross_profit_rule" type="numeric"/>
            <column name="absorbed_fixed_costs" type="numeric"/>
            <column name="other_expenses" type="numeric"/>
            <column name="profit_before_tax" type="numeric"/>
            <column name="estimated_taxes" type="numeric"/>
            <column name="estimated_net_profit" type="numeric"/>
            <column name="net_margin_percentage" type="numeric"/>
            <column name="net_margin_rule" type="numeric"/>
            <column name="commission_to_receive" type="numeric"/>
            <column name="active" type="boolean"/>
            <column name="created_by" type="string"/>
            <column name="created_date" type="date"/>
            <column name="last_modified_by" type="string"/>
            <column name="last_modified_date" type="date"/>
            <!-- jhipster-needle-liquibase-add-loadcolumn - JHipster (and/or extensions) can add load columns here -->
        </loadData>
    </changeSet>
</databaseChangeLog>
